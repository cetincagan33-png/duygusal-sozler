<script>
const messages = [
    "BazÄ± insanlar vardÄ±r, geldiÄŸi an hayat deÄŸiÅŸirâ€¦",
    "Seninle birlikte iÃ§imde baÅŸka bir dÃ¼nya bÃ¼yÃ¼yor.",
    "SessizliÄŸimde bile sen varsÄ±n.",
    "Kalbim adÄ±nÄ± her atÄ±ÅŸÄ±nda biraz daha fÄ±sÄ±ldÄ±yor.",
    "VarlÄ±ÄŸÄ±n, en karanlÄ±k gÃ¼nÃ¼mÃ¼ bile aydÄ±nlatÄ±yor."
];

let index = 0;
let isTyping = false;
const textElement = document.getElementById("text");
const endMessage = document.getElementById("endMessage");
const nextBtn = document.getElementById("nextBtn");
const topText = document.getElementById("topText");

function typeEffect(message, i = 0) {
    if (i < message.length) {
        textElement.innerHTML += message.charAt(i);
        setTimeout(() => typeEffect(message, i + 1), 55);
    } else {
        isTyping = false;
        if (index === messages.length) {
            endMessage.innerHTML = "â€” Bitti â€”";
            nextBtn.style.display = "none";
        }
    }
}

function showNext() {
    if (isTyping || index >= messages.length) return;
    isTyping = true;
    textElement.innerHTML = "";
    typeEffect(messages[index]);
    index++;
}

showNext();

/* Kalp Ã¼retimi ve Ã¼st yazÄ±yÄ± senkronize animasyonla */
function createHeart() {
    const heart = document.createElement("div");
    heart.classList.add("heart");
    heart.innerHTML = "ðŸ’–";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.fontSize = (Math.random() * 25 + 30) + "px";
    heart.style.animationDuration = (Math.random() * 2 + 3) + "s";
    document.body.appendChild(heart);

    // Ãœst yazÄ± senkron: bÃ¼yÃ¼ + renk deÄŸiÅŸimi
    topText.style.transform = "scale(1.08)";
    topText.style.color = "#" + Math.floor(Math.random()*16777215).toString(16);
    topText.style.textShadow = `0 0 15px ${topText.style.color}, 0 0 30px #ff69b4, 0 0 40px #ff1493`;
    setTimeout(() => {
        topText.style.transform = "scale(1)";
        topText.style.color = "#fff";
        topText.style.textShadow = "0 0 10px #fff, 0 0 20px #ff69b4, 0 0 30px #ff1493";
    }, 300);

    setTimeout(() => heart.remove(), 6000);
}

setInterval(createHeart, 250);

/* YÄ±ldÄ±zlar */
function createStar() {
    const star = document.createElement("div");
    star.classList.add("star");
    star.innerHTML = "âœ¦";
    star.style.left = Math.random() * 100 + "vw";
    star.style.top = Math.random() * 100 + "vh";
    document.body.appendChild(star);
}

for (let i = 0; i < 60; i++) { createStar(); }
</script>

